@model StateInterface.Areas.Certify.Models.StatisticsRecordsCenterModel
@{
    ViewBag.Title = @Model.RecordsCenter.Name + " Certification Status";
}

<div class="row">
    <div class="col-xs-11">
        <div data-bind="template: { name: 'statisticsHeader-template' }"></div>
    </div>
    <div class="col-xs-1">
        <a target="_blank" title="Help" href="@Url.Action("Help", "Report", new {  })" class="glyphicon glyphicon-question-sign pull-right" style="margin-top:14px;"></a>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div data-bind="template: { name: 'statisticsAnalytics-template', data: Statistics }"></div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-xs-12">
        <div data-bind="template: { name: 'statisticsProjection-template', data: Statistics }"></div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-xs-11"></div>
    <div class="col-xs-1">
        <a target="_blank" href="@Url.Action("Print", "Report", new { recordsCenterName = @Model.RecordsCenter.Name })" class="pull-right glyphicon glyphicon-print"></a>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-xs-12">
        <div data-bind="template: { name: 'statisticsStatusApplication-template' }"></div>
    </div>
</div>
<script type="text/javascript">
    var initialData = @Html.Raw(Model.InitialData)
</script>
@Html.Partial("_statisticsHeaderTemplate")
@Html.Partial("_statisticsAnalyticsTemplate")
@Html.Partial("_statisticsStatusApplicationTemplate")
@Html.Partial("_statisticsStatusCategoryTemplate")
@Html.Partial("_statisticsProjectionTemplate")
@section scripts{
    @Scripts.Render("~/bundles/stateinterface_certify_statistics")
}

