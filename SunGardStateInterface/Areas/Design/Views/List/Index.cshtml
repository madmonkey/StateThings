@* List Index Page *@
@model StateInterface.Areas.Design.Models.OptionListCatalogModel
<div class="row">
    <div class="col-xs-12">
        <div class="pull-right padRight leadSmaller">
            <span class="padRight">Records Center</span><select data-bind="options: RecordsCenterSelector.RecordsCenters, optionsText: 'Name', optionsValue: 'Name', value: RecordsCenterSelector.SelectedRecordsCenterName"></select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div data-bind="template: { name: 'breadcrumbs-template' }"></div>
        <div class="inlineBlock">
            <span class="padLeft leadLarger">List Design</span>
            <span class="loading inlineBlock padLeft" data-bind="visible: listsAreLoading"></span>
        </div>
    </div>
</div>
<div data-bind="template: { name: 'noListFound-template' }"></div>
<div class="row">
    <div class="col-xs-12">
        <div data-bind="template: { name: 'catalogItems-template' }"></div>
    </div>
</div>

<script type="text/html" id="breadcrumbs-template">
    <ol class="breadcrumb">
        <li><a data-bind="attr: { href: DesignHomeUrl }, html: RecordsCenterSelector.SelectedRecordsCenterName"></a></li>
        <li class="active">Lists</li>
    </ol>
</script>

<script type="text/html" id="noListFound-template">
    <div class="row" data-bind="if: showNoListsFound() === true">
        <div class="col-xs-12">
            <br />
            <br />
            <h2 class="text-center text-danger">No lists were found for this Records Center</h2>
        </div>
    </div>
</script>

@Html.Partial("_catalogItemsTemplate")

<script type="text/javascript">
    var initialData = @Html.Raw(Model.InitialData)
</script>
@section scripts{
    @Scripts.Render("~/bundles/stateinterface_design_list")
}